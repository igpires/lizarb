# view formatter.rb.erb

  def self.call(menv)
    ret = true
    super
    
    menv[:format_out] = <%= arg_name.camelize %>.format menv[:format_in]
  rescue => e
    raise if menv[:raise_errors]
    log stick :light_white, :red, :b, "#{e.class}: #{e.message}"
    menv[:error] = e
    menv[:format_out] = menv[:format_in]
  ensure
    nil
  end
