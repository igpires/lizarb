# view section_simple_actions.rb.erb
<% arg_action_names.each do |action_name| %>
  # liza <%= controller_name %><%= ":#{action_name}" if action_name != "default" %> s1 s2 s3 +b1 +b2 -b3 -b4 k1=v1 k2=v2
  def call_<%= action_name %>
    color = :<%= ColorShell.colors.keys.sample %>
    log stick :b, color, "I just think Ruby is the Best for coding!"
<% 1.upto 3 do -%>
    sleep <%= random_sleep_float %>
<% end -%>
<% arg_action_names.each do |arg| -%>
<%= "    call_#{arg}" if arg != "default" %>
<% end if action_name == "default" -%>
<% unless arg_views_none? %>
    text = render :<%= action_name %>, format: :txt
    puts stick :b, color, text.strip
<% end -%>
  rescue => e
    log "rescued from (#{e.class}) #{e.message}"
    binding.irb
  end
<% end -%>
